#include <QApplication>
#include <QGraphicsScene>
#include <QGraphicsView>
#include <QGraphicsTextItem>
#include <QPolygonF>

int main(int argc, char *argv[])
{
    QApplication a(argc, argv);

    // Создаем объект QGraphicsScene
    QGraphicsScene scene;

    // Создаем Polygon
    QPolygonF polygon;
    polygon << QPointF(0, 0) << QPointF(100, 0) << QPointF(100, 100) << QPointF(0, 100);

    // Создаем QGraphicsPolygonItem
    QGraphicsPolygonItem *polygonItem = new QGraphicsPolygonItem(polygon);

    // Создаем QGraphicsTextItem
    QGraphicsTextItem *textItem = new QGraphicsTextItem("Текст на полигоне");
    textItem->setDefaultTextColor(Qt::white);

    // Создаем QGraphicsItemGroup
    QGraphicsItemGroup *group = new QGraphicsItemGroup();
    group->addToGroup(polygonItem);
    group->addToGroup(textItem);

    // Устанавливаем позицию текста относительно Polygon
    QRectF rect = polygonItem->boundingRect();
    QPointF center = rect.center();
    QPointF textPos(center.x() - textItem->boundingRect().width()/2, center.y() - textItem->boundingRect().height()/2);
    textItem->setPos(textPos);

    // Добавляем QGraphicsItemGroup в QGraphicsScene
    scene.addItem(group);

    // Создаем QGraphicsView и устанавливаем в него QGraphicsScene
    QGraphicsView view(&scene);
    view.show();

    return a.exec();
}
