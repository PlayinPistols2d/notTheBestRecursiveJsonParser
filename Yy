#include <QString>
#include <QDebug>

QString formatNumber(const QString& stringValue) {
    int lastSignificantDigitIndex = stringValue.indexOf(QRegExp("[^0]")) - 1;

    if (lastSignificantDigitIndex < 0) {
        return "0";
    }

    QString formattedString = stringValue.left(lastSignificantDigitIndex + 1);
    formattedString.replace(",", ".");

    return formattedString;
}

int main() {
    QString stringValue = "0,008";
    QString formattedString = formatNumber(stringValue);

    qDebug() << formattedString;

    return 0;
}
