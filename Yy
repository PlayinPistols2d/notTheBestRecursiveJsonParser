#include <QtCore/QString>
#include <QtCore/QRegExp>

QString convertExponential(QString expression)
{
    QRegExp regex("([+-]?\\d*\\.?\\d+[eE][+-]?\\d+)");
    int pos = 0;
    
    while ((pos = regex.indexIn(expression, pos)) != -1) {
        QString match = regex.cap(1);
        double number = match.toDouble();
        QString converted = QString::number(number);
        expression.replace(match, converted);
        pos += match.length();
    }
    
    return expression;
}

int main()
{
    QString expression = "1+cos(2)*3 + 1.2e+10 - 23/( sqrt(9)-2)";
    QString convertedExpression = convertExponential(expression);
    
    qDebug() << "Original expression:" << expression;
    qDebug() << "Converted expression:" << convertedExpression;
    
    return 0;
}
