QString text = "Hello, World!"; // заданный текст
QFont font("Arial", 16); // шрифт для отображения текста

// создание QImage нужного размера и установка цвета фона
QImage image(QSize(100, 100), QImage::Format_ARGB32);
image.fill(Qt::white);

// создание QPainter для рисования на QImage
QPainter painter(&image);
painter.setFont(font); // установка шрифта для QPainter

// рисование текста на QImage
QRect textRect = painter.boundingRect(image.rect(), Qt::AlignCenter, text);
painter.drawText(textRect, text);

// создание QPixmap из QImage
QPixmap pixmap = QPixmap::fromImage(image);

// установка QPixmap в качестве фона объекта QGraphicsItem (например, DiagramItem)
DiagramItem* item = new DiagramItem();
item->setPixmap(pixmap);
