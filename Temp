void MainWindow::on_addArrowButton_clicked()
{
    QList<QGraphicsItem*> selected = scene->selectedItems();
    if (selected.count() != 2) {
        QMessageBox::information(this, "Error", "Please select two items to create an arrow.");
        return;
    }
    QGraphicsLineItem *line = new QGraphicsLineItem();
    line->setPen(QPen(Qt::black, 2));
    int from = items.key(selected[0]);
    int to = items.key(selected[1]);
    QPointF startPos = selected[0]->pos() + QPointF(selected[0]->boundingRect().width() / 2, selected[0]->boundingRect().height() / 2);
    QPointF endPos = selected[1]->pos() + QPointF(selected[1]->boundingRect().width() / 2, selected[1]->boundingRect().height() / 2);
    line->setLine(QLineF(startPos, endPos));
    edges.append(qMakePair(from, to));
    scene->addItem(line);
}
